@model WebAdminDatLichPhongKham.Models.NghiPhepViewModel

<h2>Tạo đơn nghỉ phép mới</h2>

<form asp-controller="DonNghiPhep" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="NgayNghi"></label>
        <input asp-for="NgayNghi" class="form-control" />
        <span asp-validation-for="NgayNghi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LyDo"></label>
        <input asp-for="LyDo" class="form-control" />
        <span asp-validation-for="LyDo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SelectedCaKhamId"></label>
        <select asp-for="SelectedCaKhamId" class="form-control" asp-items="@(new SelectList(Model.CaKhamList, "Id", "TenCa"))">
            <option value="">Chọn ca khám</option>
        </select>
        <span asp-validation-for="SelectedCaKhamId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Tạo đơn nghỉ phép</button>
</form>
